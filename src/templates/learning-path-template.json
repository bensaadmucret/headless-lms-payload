        "estimatedTime": 30,
        "questions": [
          {
            "questionText": "Combien de chambres possède le cœur humain ?",
            "options": [
              {
                "text": "4 chambres (2 oreillettes, 2 ventricules)",
                "isCorrect": true
              },
              {
                "text": "3 chambres",
                "isCorrect": false
              },
              {
                "text": "2 chambres",
                "isCorrect": false
