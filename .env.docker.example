# Configuration Docker pour le développement
# Copiez ce fichier vers .env.local pour Docker

# Database (PostgreSQL)
DATABASE_URI=postgresql://payload:password@localhost:5433/payload
DATABASE_DB=payload
DATABASE_USER=payload
DATABASE_PASSWORD=password

# Redis (pour les jobs asynchrones)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
# REDIS_PASSWORD=  # Pas de mot de passe pour le développement

# Payload
PAYLOAD_SECRET=your-secret-key-here

# NextJS
NEXT_PUBLIC_SERVER_URL=http://localhost:3000

# Jobs Workers
WORKERS_ENABLED=true
WORKERS_CONCURRENCY=3